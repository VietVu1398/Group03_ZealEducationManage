@model IEnumerable<ZealEducationManager.Entities.Candidate>

@{
    ViewData["Title"] = "Batch Details";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
    var batchCode = ViewData["BatchCode"];
}

<h1>Candidates In Batch @batchCode</h1>

<table class="table datatable">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Name
            </th>
            <th>
                Contact Info
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CandidateId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactInfo)
                </td>
                <td>
                    <a asp-controller="Candidates" asp-action="Details" asp-route-id="@item.CandidateId" >View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="row">
    <a class="btn btn-secondary" href="javascript:history.back()">Back</a>
</div>

