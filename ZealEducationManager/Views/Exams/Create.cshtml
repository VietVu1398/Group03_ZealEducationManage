@model ZealEducationManager.Models.ExamsViewModel.AddExamModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h1>Create</h1>

<h4>Exam</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Exam Date </label>
                <input type="date" asp-for="ExamDate" value="@DateOnly.FromDateTime(DateTime.Now)" class="form-control" />
                <span asp-validation-for="ExamDate"  class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Course Code</label>
                <select asp-for="CourseId" class ="form-control" asp-items="@Model.CourseCode"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Batch Code</label>
                <select asp-for="BatchId" class ="form-control" asp-items="@Model.BatchCode"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

<div>
</div>

