@model IEnumerable<ZealEducationManager.Entities.Exam>

@{
    ViewData["Title"] = "ListBatchExams";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
    var batchcode = ViewData["BatchCode"];
}

<div class="page-header">
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6 col-12">
            <h5 class="text-uppercase mb-0 mt-0 page-title">Exams in @batchcode </h5>
        </div>
    </div>
</div>



<div class="row">
    <div class="col-md-12 mb-3">
        <div class="table-responsive">
            <table class="table custom-table datatable">
                <thead class="thead-light">
                    <tr>
                        <th>Exam Date</th>
                        <th>Batch </th>
                        <th>Course</th>
                        <th class="text-right">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ExamDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Batch.BatchCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Course.CourseCode)
                            </td>
                            <td class="text-right">
                                <a asp-controller="Exams" asp-action="ListCandidate" asp-route-id="@item.ExamId" class="btn btn-primary btn-sm mb-1">
                                    List
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

