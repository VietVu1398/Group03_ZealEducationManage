@model IEnumerable<ZealEducationManager.Entities.Candidate>
@{
    ViewData["Title"] = "OutstandingFeeCandidates";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}


<h1>Candidates With Outstanding Fee</h1>

<table class="table datatable">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Batch
            </th>
            <th>
                Outstanding Fee
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Batch.BatchCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OutstandingFee)
                </td>
                <td>
                    <a asp-controller="Candidates" asp-action="Details" asp-route-id="@item.CandidateId">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="row">
    <a class="btn btn-secondary" asp-action="Index">Back</a>
</div>


